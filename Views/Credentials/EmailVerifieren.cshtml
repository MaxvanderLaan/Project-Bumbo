@model Bumbo.Web.Models.Credentials.EmailVerifierenModel

@{ Layout = ""; }

<!DOCTYPE html>
<html lang="nl-nl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bumbo - Email vervieren</title>
    <link type="text/css" rel="stylesheet" href="~/css/credentials.css" />
    <link type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet" />
    <link type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.css" rel="stylesheet" />
</head>
<body style="background-color: #eee;" onload="readUrl()">
    <section class="h-100 gradient-form">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-xl-10">
                    <div class="card rounded-3 text-black">
                        <div class="row g-0">
                            <div class="col-lg-6">
                                <div class="card-body p-md-5 mx-md-4">

                                    <div class="text-center">
                                        <img src="~/assets/images/Bumbo-Logo.png" style="width: 185px;" alt="logo">
                                        <h4 class="mt-3 mb-5 pb-1">Wij zijn Team Bumbo</h4>
                                    </div>

                                    <form class="md-form visually-hidden" asp-action="EmailVerifieren">
                                        <p>Verifier uw email</p>

                                        <div class="form-group form-outline mb-2 mt-2">
                                            <input asp-for="email" id="form-verifieren-email" class="form-control" placeholder="Email address" readonly />
                                            <label asp-for="email" class="form-label" for="form-verifieren-email"></label>
                                        </div>

                                        <input hidden asp-for="token" id="form-verifieren-token" class="visually-hidden" readonly />

                                        <div class="form-group text-center pt-1 pb-1">
                                            <input class="btn btn-block btn-outline-bumbo mb-3" type="submit" value="Verifier email" style="color: #f5c105;" />
                                        </div>
                                    </form>

                                    <p>Uw email is geverifieerd</p>
                                    <form asp-action="ToLoginPage">
                                        <div class="form-group text-center pt-1 pb-1">
                                            <input class="btn btn-block btn-outline-bumbo mb-3" type="submit" value="Naar login pagina" style="color: #f5c105;" />
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="col-lg-6 d-flex align-items-center">
                                <img class="login-page-col-2-img" src="~/assets/images/Bumbo_medewerkers_1.jpg" alt="Bumbo Medewerker">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.js"></script>
    <script type="text/javascript" src="~/js/Credentials/EmailVerifieren.js"></script>
</body>
</html>