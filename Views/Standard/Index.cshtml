@using Bumbo.Domain.Models
@model IEnumerable<Bumbo.Domain.Models.Standard>

@{
    ViewData["Title"] = "Normeringen overzicht";
}
<link rel="stylesheet" href="~/css/standard.css" type="text/css" />
<script type="text/javascript" src="js/Standard/standard.js"></script>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="text-white">Normeringen overzicht</h1>
    </div>
    <div class="d-flex mt-4 mb-3">
        <div class="shadow d-flex flex-column border w-100 p-3 bg-white rounded">
            <table id="StandardTable" class="display table table-responsive">
                <thead>
                    <tr>
                        <th>
                            Branchnaam
                        </th>
                        <th>
                            Activiteit
                        </th>
                        <th>
                            Normering
                        </th>
                        <th>
                            Omschrijving
                        </th>
                        <th>Bewerken</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Standard item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Branch.Name)
                        </td>
                        <td>
                            @{
                                string activity = "";
                            }
                            @switch (item.Activity)
                            {
                                case Bumbo.Domain.Models.Activity.Coli:
                                    activity = "Coli's uitladen";
                                    break;
                                case Bumbo.Domain.Models.Activity.Cashout:
                                    activity = "Kassa";
                                    break;
                                case Bumbo.Domain.Models.Activity.Fresh:
                                    activity = "Vers";
                                    break;
                                case Bumbo.Domain.Models.Activity.Mirror:
                                    activity = "Spiegelen";
                                    break;
                                case Bumbo.Domain.Models.Activity.Restock:
                                    activity = "Vakken vullen";
                                    break;
                            }
                            @activity
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Norm)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="width">
                            <div class="d-flex">
                                <a class="btn btn-dark" asp-action="Edit" asp-route-id="@item.StandardId">
                                    <i class="bi bi-pen-fill"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
