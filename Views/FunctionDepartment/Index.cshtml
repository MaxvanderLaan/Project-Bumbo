@using Bumbo.Domain.Models
@model FunctionDepartmentViewModel

@{
    ViewData["Title"] = "Functie en afdeling overzicht";
}

<link href="~/css/functiondepartment.css" rel="stylesheet" type="text/css" />

<script src="~/js/FunctionDepartment/functionDepartmentScript.js" type="text/javascript"></script>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="text-white">Functie & Afdeling</h1>
        <div>
            <a class="btn bg-gray-800 text-white" asp-action="CreateFunction">Functie aanmaken</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="d-flex mt-4 mb-3">
                <div class="shadow d-flex flex-column border w-100 p-3 bg-white rounded">
                    <table id="FunctionTable" class="display table">
                        <thead>
                            <tr>
                                <th class="col">
                                    @Html.DisplayNameFor(item => item.Function.Name)
                                </th>
                                <th class="col">
                                    @Html.DisplayNameFor(item => item.Function.Department.Name)
                                </th>
                                <th class="col">
                                    Bewerken
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Function item in Model.Functions)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Department.Name)
                                    </td>
                                    <td>
                                        <div class="d-flex">
                                            <a asp-controller="FunctionDepartment" asp-action="EditFunction" asp-route-functionId="@item.FunctionId" class="btn btn-dark">
                                                <i class="bi bi-pen-fill"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="d-flex mt-4 mb-3">
                <div class="shadow d-flex flex-column border w-100 p-3 bg-white rounded">
                    <table id="DepartmentTable" class="display table">
                        <thead>
                            <tr>
                                <th class="col">
                                    @Html.DisplayNameFor(item => item.Department.Name)
                                </th>
                                <th class="col">
                                    @Html.DisplayNameFor(item => item.Department.Code)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Department item in Model.Departments)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Code)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
