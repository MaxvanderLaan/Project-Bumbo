@model Bumbo.Domain.Models.Function

@{
    ViewData["Title"] = "Functie bewerken";
}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="text-white">Functie bewerken</h1>
    </div>

    <div class="d-flex mt-4 mb-3">
        <div class="shadow d-flex flex-column border w-60 p-3 bg-white rounded">
            <div class="row">
                <div class="col-md-11">
                    <form asp-action="EditFunction">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="row">
                            <input hidden asp-for="FunctionId" />
                            <div class="form-group mb-3 w-50">
                                <label asp-for="Department.Name" class="control-label"></label>
                                <select asp-for="DepartmentId" class="form-select">
                                    <option value="" selected disabled>Selecteer de bijbehorende afdeling...</option>
                                    @foreach (dynamic item in ViewBag.Departments)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group mb-3 w-50">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" placeholder="Voer de naam van de afdeling in..." />
                            </div>
                            <div class="form-group mt-2">
                                <a asp-action="Index" class="btn btn-secondary">Terug</a>
                                <input type="submit" value="Opslaan" class="btn btn-dark" />
                                <button asp-action="DeleteFunction" class="btn btn-danger float-end">Verwijderen</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

