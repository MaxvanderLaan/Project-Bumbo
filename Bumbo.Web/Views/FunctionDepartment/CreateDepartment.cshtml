@model Bumbo.Domain.Models.Department

@{
    ViewData["Title"] = "Afdeling aanmaken";
}
<link href="~/css/functiondepartmentpage.css" rel="stylesheet" type="text/css" />

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="text-white">Afdeling aanmaken</h1>
    </div>

    <div class="d-flex mt-4 mb-3">
        <div class="shadow d-flex flex-column border w-60 p-3 bg-white rounded">
            <div class="row">
                <div class="col-md-11">
                    <form asp-action="CreateDepartment" class="maxwidthform">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="form-group mb-3 w-50">
                                <label asp-for="Code" class="control-label"></label>
                                <input asp-for="Code" class="form-control" placeholder="Voer de code in van de afdeling..." />
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3 w-50">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" placeholder="Voer de naam van de afdeling in..." />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-2">
                                <a asp-action="Index" class="btn btn-secondary">Terug</a>
                                <input type="submit" value="Aanmaken" class="btn btn-dark" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

