@using Bumbo.Web.Models.Agenda
@model PublishViewModel
@{
    ViewData["Title"] = "Rooster publiceren";
}

@if (User.IsInRole("Manager") || User.IsInRole("Systeembeheerder"))
{
    <h1 class="text-white">Rooster publiceren</h1>

    <div class="w-50">
        <div class="me-4 mt-4">
            <div class="rounded bg-white shadow p-4">
                <form method="post">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <div class="mb-4">
                            <label class="col-form-label">Startdatum</label>
                            <input asp-for="StartDate" class="form-control" type="datetime-local">
                        </div>
                        <div class="mb-4">
                            <label class="col-form-label">Einddatum</label>
                            <input asp-for="EndDate" class="form-control" type="datetime-local">
                        </div>
                    </div>
                    <button type="submit" class="btn bg-bumbo-yellow" asp-controller="Agenda" asp-action="PublishSchedule">Publiceer</button>
                </form>
            </div>
        </div>
    </div>
}