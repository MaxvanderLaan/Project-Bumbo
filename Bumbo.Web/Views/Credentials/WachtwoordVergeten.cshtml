@model Bumbo.Web.Models.Credentials.WachtwoordVergetenModel

@{ Layout = ""; }
<!DOCTYPE html>
<html lang="nl-nl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bumbo - Wachtwoord Vergeten</title>
    <link rel="stylesheet" href="~/css/credentials.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.css" rel="stylesheet" />
</head>
<body style="background-color: #eee;"  onload="readUrl()">
    <section class="h-100 gradient-form">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-xl-10">
                    <div class="card rounded-3 text-black">
                        <div class="row g-0">
                            <div class="col-lg-6">
                                <div class="card-body p-md-5 mx-md-4">

                                    <div class="text-center">
                                        <img src="~/assets/images/Bumbo-Logo.png" style="width: 185px;" alt="logo">
                                        <h4 class="mt-3 mb-5 pb-1">Wij zijn Team Bumbo</h4>
                                    </div>

                                    <form class="md-form" asp-action="WachtwoordVergeten">
                                        <p>Nieuwe wachtwoord opvragen</p>

                                        <div class="form-outline mb-2 mt-2">
                                            <input asp-for="Email" type="email" id="form-wachtwoordvergeten-email" class="form-control" placeholder="Email address" />
                                            <label asp-for="Email" class="form-label" for="form-wachtwoordvergeten-email">Email</label>
                                        </div>

                                        <span asp-validation-for="Email" class="text-danger"></span>

                                        <input hidden asp-for="Url" id="form-wachtwoordvergeten-url" class="visually-hidden" readonly />

                                        <div class="text-center pt-1 mb-5 pb-1">
                                            <input class="btn btn-block btn-outline-bumbo mb-3" type="submit" value="Vraag nieuwe wachtwoord aan" style="color: #f5c105;" />
                                            <hr />
                                            <div class="d-flex align-items-center justify-content-center pb-4">
                                                <p class="mb-0 me-2">Toch je wachtwoord gevond?</p>
                                                <a asp-action="Login" class="btn btn-outline-bumbo">Log in</a>
                                            </div>
                                        </div>
                                    </form>

                                </div>
                            </div>
                            <div class="col-lg-6 d-flex align-items-center">
                                <img class="login-page-col-2-img" src="~/assets/images/Bumbo_medewerkers_4.jpg" alt="Bumbo Medewerker">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.js"></script>
    <script type="text/javascript" src="~/js/Credentials/WachtwoordVergeten.js"></script>
</body>
</html>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}