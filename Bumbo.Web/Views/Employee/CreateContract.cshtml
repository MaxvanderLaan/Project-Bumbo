@model Bumbo.Domain.Models.Contract

@{
    ViewData["Title"] = "Contract aanmaken";
}

<div class="mb-3">
    <h1 class="text-white">Contract aanmaken</h1>
</div>

<div class="shadow border p-3 bg-white rounded w-50">
    <form class="row p-2" asp-action="CreateContract" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="EmployeeId" class="form-control" />
        <div class="row">
            <div class="col-15">
                <div class="form-group mb-3">
                    <label class="form-label">Functie</label>
                    <select asp-for="FunctionId" class="form-control" asp-items="ViewBag.Functions"></select>
                    <span asp-validation-for="FunctionId" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-6">
                <div class="form-group mb-3">
                    <label asp-for="StartDate" class="form-label">Startdatum</label>
                    <input asp-for="StartDate" class="form-control" type="date" min="@DateTime.Now.ToString("yyyy-MM-dd")" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="StartDate" type="date" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group mb-3">
                    <label asp-for="EndDate" class="form-label">Einddatum</label>
                    <input asp-for="EndDate" class="form-control" type="date" min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="EndDate" type="date" class="text-danger"></span>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-6">
                <div class="form-group mb-3">
                    <label asp-for="Scale" class="form-label">Salarisschaal</label>
                    <input asp-for="Scale" class="form-control" min="1" value="1" />
                    <span asp-validation-for="Scale" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group mb-3">
                    <label asp-for="MinimalHours" class="form-label">Minimale uren</label>
                    <input asp-for="MinimalHours" class="form-control" min="0" value="12" />
                    <span asp-validation-for="MinimalHours" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <input type="submit" class="btn btn-dark" value="Bevestig" />
        </div>
    </form>
</div>